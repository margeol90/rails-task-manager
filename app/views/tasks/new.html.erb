<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field(:title, {:class => 'form-control'}) %>
  <%= f.label :details %>
  <%= f.text_field(:details, {:class => 'form-control'}) %>
  <% if !@task.new_record? %>
  <%= f.check_box :completed %>
  <%= f.label :completed %>
  <% end %>
  <%= f.submit ({:class => 'btn btn-primary mt-2'})%>
<% end %>
